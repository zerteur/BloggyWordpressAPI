doctype html
html
  head
    title Projets
    link(rel='stylesheet', href='https://unpkg.com/tachyons/css/tachyons.min.css')
  body
    header.bg-black-90.fixed.w-100.ph3.pv3.ph4-l
      nav.tc.db.dt-l.w-100.border-box.pa3.lh-copy
        a.dtc.v-mid.mid-gray.link.dim.w-25.lh-title.mh2(href='/') Mon portfolio
        div.dtc.v-mid.w-75.tr
          a.link.dim.dark-gray.f6.f5-l.dib.mh3.ph2-l.mid-gray.bg-animate.hover-bg-light-gray(href='/projects') Projets
          a.link.dim.dark-gray.f6.f5-l.dib.mh3.ph2-l.mid-gray.bg-animate.hover-bg-light-gray(href='/about') A propos
    main.pa3.pa5-ns
      section.pb5-l
        div.center.measure-wide-l
          h2.fw6.f2-l.tc-l.center-l Projets
          .flex.flex-wrap.justify-center.mt3
            each article, index in articles
              if index % 3 === 0
                .w-100.flex.justify-center.mb4
                  each article2, index2 in articles.slice(index, index+3)
                    a.pa2.tc.black.link.dim.mb4.mh3(href=`/article/${article2.slug}`, style=`width: calc(100% / 3);`)
                      .bg-white.shadow-1.pa4-ns.br2-ns.center-ns.overflow-hidden-ns
                        img(src=`${article2.thumbnail}`, alt=`${article2.title}`, class='db mb3 w-100 h-auto')
                        h3.f5.fw6.mb0
                          = article2.title
                        p.f6.gray.mt0
                          = article2.date
                        p.f6.mt3
                          = article2.excerpt
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js', integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js', integrity='sha384-Q6E/MxI9VqTkIaNM6b9ViZ1Z9XpwLh6HvzBlxpzzZZyKxksdXTJOMaJwU/p1Md+5', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js', integrity='sha384-eXsJBIVPc8IvHgZEyLw12LQwNy4f/kRb+WlZIBsKp4t4/PDI8CvTtHQyjzsLxskS', crossorigin='anonymous')
